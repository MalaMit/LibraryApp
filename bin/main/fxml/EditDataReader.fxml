<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane fx:id="mainStackPCreate" prefHeight="600.0" prefWidth="700.0" style="-fx-border-width: 5;" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.EditDataReaderController">
   <children>
      <HBox alignment="CENTER" prefHeight="300.0" prefWidth="200.0">
         <children>
            <VBox prefHeight="300.0" prefWidth="300.0">
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <VBox.margin>
                        <Insets top="120.0" />
                     </VBox.margin>
                     <children>
                        <VBox prefWidth="300.0">
                           <children>
                              <Label text="ID:">
                                 <VBox.margin>
                                    <Insets left="50.0" />
                                 </VBox.margin>
                              </Label>
                              <TextField fx:id="idReader" alignment="CENTER" editable="false" prefHeight="35.0">
                                 <VBox.margin>
                                    <Insets left="50.0" right="40.0" top="10.0" />
                                 </VBox.margin>
                              </TextField>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <VBox prefWidth="300.0">
                           <children>
                              <Label text="Name:">
                                 <VBox.margin>
                                    <Insets left="50.0" />
                                 </VBox.margin>
                              </Label>
                              <TextField fx:id="nameField" alignment="CENTER" prefHeight="35.0">
                                 <VBox.margin>
                                    <Insets left="50.0" right="40.0" top="10.0" />
                                 </VBox.margin>
                              </TextField>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <VBox prefWidth="300.0">
                           <children>
                              <Label text="Surname:">
                                 <VBox.margin>
                                    <Insets left="50.0" />
                                 </VBox.margin>
                              </Label>
                              <TextField fx:id="surnameField" alignment="CENTER" prefHeight="35.0">
                                 <VBox.margin>
                                    <Insets left="50.0" right="40.0" top="10.0" />
                                 </VBox.margin>
                              </TextField>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <JFXButton onAction="#closeWindow" prefHeight="50.0" prefWidth="160.0" text="Cancel">
                     <VBox.margin>
                        <Insets left="100.0" top="80.0" />
                     </VBox.margin>
                  </JFXButton>
               </children>
            </VBox>
            <VBox prefHeight="300.0" prefWidth="300.0">
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <VBox prefWidth="300.0">
                           <children>
                              <Label text="Address:">
                                 <VBox.margin>
                                    <Insets left="50.0" />
                                 </VBox.margin>
                              </Label>
                              <TextField fx:id="addressField" alignment="CENTER" prefHeight="35.0">
                                 <VBox.margin>
                                    <Insets left="50.0" right="40.0" top="10.0" />
                                 </VBox.margin>
                              </TextField>
                           </children>
                        </VBox>
                     </children>
                     <VBox.margin>
                        <Insets top="120.0" />
                     </VBox.margin>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <children>
                        <VBox prefWidth="300.0">
                           <children>
                              <Label text="Pesel:">
                                 <VBox.margin>
                                    <Insets left="50.0" />
                                 </VBox.margin>
                              </Label>
                              <TextField fx:id="peselField" alignment="CENTER" prefHeight="35.0">
                                 <VBox.margin>
                                    <Insets left="50.0" right="40.0" top="10.0" />
                                 </VBox.margin>
                              </TextField>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <VBox prefWidth="300.0">
                           <children>
                              <Label text="Phone Number:">
                                 <VBox.margin>
                                    <Insets left="50.0" />
                                 </VBox.margin>
                              </Label>
                              <TextField fx:id="phoneField" alignment="CENTER" prefHeight="35.0">
                                 <VBox.margin>
                                    <Insets left="50.0" right="40.0" top="10.0" />
                                 </VBox.margin>
                              </TextField>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <JFXButton onAction="#updateButton" prefHeight="50.0" prefWidth="160.0" ripplerFill="BLACK" text="Update">
                     <VBox.margin>
                        <Insets left="50.0" top="80.0" />
                     </VBox.margin>
                  </JFXButton>
               </children>
            </VBox>
         </children>
      </HBox>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Update Data Reader" StackPane.alignment="TOP_CENTER">
         <StackPane.margin>
            <Insets top="50.0" />
         </StackPane.margin>
         <font>
            <Font name="Arial Bold" size="28.0" />
         </font>
      </Text>
   </children>
</StackPane>
