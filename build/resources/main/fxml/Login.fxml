<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="backGround" opacity="0.8" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
   <children>
      <AnchorPane fx:id="paneLogAndPass" layoutX="225.0" layoutY="90.0" prefHeight="350.0" prefWidth="350.0">
         <children>
            <JFXTextField fx:id="loginField" alignment="CENTER" layoutX="86.0" layoutY="119.0" prefHeight="40.0" prefWidth="200.0" />
            <JFXPasswordField fx:id="passField" alignment="CENTER" layoutX="86.0" layoutY="185.0" prefHeight="40.0" prefWidth="200.0" />
            <ImageView fitHeight="40.0" fitWidth="44.0" layoutX="32.0" layoutY="119.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../image/icon_User.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="40.0" fitWidth="40.0" layoutX="32.0" layoutY="185.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../image/icon_Key.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="77.0" layoutY="30.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../image/libraryText.png" />
               </image>
            </ImageView>
            <Button fx:id="loginInButton" alignment="CENTER" layoutX="190.0" layoutY="251.0" mnemonicParsing="false" onAction="#login" prefHeight="33.0" prefWidth="96.0" text="Login" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Label fx:id="loginIsEmpty" alignment="CENTER" layoutX="86.0" layoutY="159.0" prefHeight="17.0" prefWidth="200.0" textAlignment="CENTER" textFill="RED">
               <font>
                  <Font name="Arial Bold" size="13.0" />
               </font>
            </Label>
            <Label fx:id="passIsEmpty" alignment="CENTER" layoutX="86.0" layoutY="225.0" prefHeight="17.0" prefWidth="200.0" textAlignment="CENTER" textFill="RED">
               <font>
                  <Font name="Arial Bold" size="13.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <AnchorPane fx:id="head" prefHeight="13.0" prefWidth="800.0">
         <children>
            <JFXButton fx:id="minButt" layoutX="110.0" layoutY="56.0" onAction="#minButt" prefHeight="25.0" prefWidth="40.0" text="-" textFill="WHITE" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="0.0" />
            <JFXButton fx:id="exitButt" layoutX="93.0" layoutY="105.0" onAction="#exitButt" prefHeight="30.0" prefWidth="40.0" text="x" textFill="WHITE" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
